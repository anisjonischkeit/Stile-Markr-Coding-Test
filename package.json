{
  "name": "stile-api",
  "version": "1.0.0",
  "description": "Fastify API with Zod validation and XML support",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "pnpm migrate && tsx watch src/start-server",
    "build": "tsc",
    "start": "node dist/start-server.js",
    "migrate": "drizzle-kit migrate",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "fast-xml-parser": "^4.5.3",
    "fastify": "^5.6.1",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^1.0.0",
    "drizzle-kit": "^0.31.5",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "fastify",
    "api",
    "zod",
    "schema",
    "typescript",
    "xml",
    "openapi"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
